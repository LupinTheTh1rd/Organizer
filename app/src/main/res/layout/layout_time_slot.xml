<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_time_slot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:orientation="horizontal"
        android:padding="@dimen/time_slot_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--had a color for linear layout earlier, white-->

        <TextView
            android:id="@+id/txt_time_slot"
            android:text="9:00 - 9:30"
            android:textSize="@dimen/time_slot_text_size"
            android:fontFamily="@font/acme"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:textColor="@color/availableText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingBottom="1dp"/>

        <TextView
            android:id="@+id/txt_time_slot_description"
            android:text="Available"
            android:textSize="@dimen/time_slot_description_size"
            android:fontFamily="@font/acme"
            android:textStyle="italic"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/availableText"
            android:paddingTop="3dp"/>

    </LinearLayout>

</android.support.v7.widget.CardView>